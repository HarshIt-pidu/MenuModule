<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/txtToppingsAddonTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Addon"
        android:textAlignment="center"
        android:textColor="@color/purple_main"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtToppingsAddonTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:text="Name*"
        android:textColor="@color/purple_main"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtToppingsAddonTitle" />

    <EditText
        android:id="@+id/etToppingsAddonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/shimmerGrey"
        android:hint="Toppings"
        android:textColor="@color/shimmerGrey"
        android:textColorHint="@color/shimmerGrey"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/txtToppingsAddonTextName" />

    <TextView
        android:id="@+id/txtTextToppingsAddonDescName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:text="Description"
        android:textColor="@color/purple_main"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etToppingsAddonName" />

    <EditText
        android:id="@+id/etToppingsAddonDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/shimmerGrey"
        android:hint="Select Delicious Topping"
        android:textColor="@color/shimmerGrey"
        android:textColorHint="@color/shimmerGrey"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/txtTextToppingsAddonDescName" />

    <TextView
        android:id="@+id/txtSuperAppVisibleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Super App Visible"
        android:textColor="@color/shimmerGrey"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etToppingsAddonDesc" />

    <TextView
        android:id="@+id/txtDisableMenuText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Visible in Menu"
        android:textColor="@color/shimmerGrey"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtSuperAppVisibleText" />

    <Button
        android:id="@+id/btnSuperAppVisibleToggle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_baseline_share_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etToppingsAddonDesc" />

    <Button
        android:id="@+id/btnDisableMenuToggle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_baseline_share_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSuperAppVisibleToggle" />

    <Button
        android:id="@+id/btnToppingsAddon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/purple_main"
        android:text="Add"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDisableMenuToggle" />


</androidx.constraintlayout.widget.ConstraintLayout>