<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clLisView"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgMenuShimmer"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:background="@color/shimmerGrey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtMenuTitleShimmer"
            android:layout_width="140dp"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:background="@color/shimmerGrey"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/imgMenuShimmer"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTimingShimmer"
            android:layout_width="100dp"
            android:layout_height="12dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/shimmerGrey"
            android:text="Staff Name"
            android:background="@color/shimmerGrey"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/imgMenuShimmer"
            app:layout_constraintTop_toBottomOf="@+id/txtMenuTitleShimmer" />

        <TextView
            android:id="@+id/txtModeShimmer"
            android:layout_width="100dp"
            android:layout_height="12dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:background="@color/shimmerGrey"
            android:text="Fixed: 6000"
            android:textColor="@color/shimmerGrey"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/imgMenuShimmer"
            app:layout_constraintTop_toBottomOf="@+id/txtTimingShimmer" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>